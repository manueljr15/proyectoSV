@model IEnumerable<SistemasVirtuales.Models.Docentes>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Estatus
        </th>
        <th>
            email
        </th>
        <th>
            Rol
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre) @Html.DisplayFor(modelItem => item.ap_pat) @Html.DisplayFor(modelItem => item.ap_mat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rol)
        </td>
        <td>
            <button type="button" class="btn btn-primary" data-toggle="modal" onclick="asignarAlumnos(@item.id_Docente)" data-target="#exampleModal">
                Asignar Tutelados
            </button>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_Docente }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_Docente }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_Docente })
        </td>
    </tr>
}

</table>

